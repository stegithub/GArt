<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.stefano.gart"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.NFC" />

    <uses-feature
        android:name="android.hardware.nfc"
        android:required="false" />

    <!-- Market filtering -->
    <uses-feature
        android:name="android.hardware.wifi.direct"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/unnamed"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.stefano.gart.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.CATEGORY_DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.stefano.gart.ExtSdCardActivity"
            android:label="@string/title_activity_ext_sd_card" >
        </activity>
        <activity
            android:name="com.example.stefano.gart.SdCardActivity"
            android:label="@string/title_activity_sd_card" >
        </activity>
        <activity
            android:name="com.example.stefano.gart.DetailActivity"
            android:label="@string/title_activity_detail" >
        </activity>

        <!-- Used for transferring files  after a successful connection -->
        <service
            android:name="com.example.stefano.gart.WiFi.FileTransferService"
            android:enabled="true" />

        <activity
            android:name="com.example.stefano.gart.SearchPeersActivity"
            android:label="@string/title_activity_search_peers" >
        </activity>
        <activity
            android:name="com.example.stefano.gart.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.example.stefano.gart.GridView2Activity"
            android:label="@string/title_activity_grid_view2" >
        </activity>
        <activity
            android:name="com.example.stefano.gart.PicassoGalleryActivity"
            android:label="@string/title_activity_picasso_gallery" >
        </activity>
    </application>

</manifest>